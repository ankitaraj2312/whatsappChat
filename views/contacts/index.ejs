<% layout('partials/boilerplate') %>

<div class="container mt-5">

  <h2 class="mb-4 text-center text-success">Contacts</h2>

  <!-- Add New Contact -->
  <div class="card mb-4 shadow-sm p-3">
    <form action="/contacts" method="POST" class="d-flex gap-2">
      <input type="text" name="name" class="form-control" placeholder="Add new contact" required>
      <button type="submit" class="btn btn-danger">Add Contact</button>
    </form>
  </div>

  <!-- Contacts List -->
  <div class="row g-3">
    <% contacts.forEach(contact => { %>
      <div class="col-12">
        <div class="card h-100 shadow-sm border-success">
          <div class="card-body d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0"><%= contact.contactName %></h5>
            <a href="/chats/<%= contact.contactName %>" class="btn btn-outline-success btn-sm">Chat</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

</div>