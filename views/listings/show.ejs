<!DOCTYPE html>
<html lang="en">
    <head>
        <title> Mini Whatsapp</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="/css/style.css">

    </head>
    <body>
        <div class="container d-flex justify-content-center mt-4">
        <div class="row row-cols-1 g-3 w-100" style="max-width: 600px;">
            <form method="GET" action="/chats/new">
            <button type="submit" class="btn btn-primary btn-lg mt-2 mb-3">New Chat</button>
            </form>
            <br>
            <% for(let chat of allchats) { %>
                <div class="col">
                    <div class="card chats p-3">
                        <p><strong>From:</strong> <%= chat.from %></p>
                        <div class="msg p-2 bg-light border rounded">
                            <p><%= chat.msz %></p>
                        </div>
                        <p><strong>Received by:</strong> <%= chat.to %></p>
                        <hr>
                        <div class="text-end mt-2">
                            <small class="text-muted">
                                <span class="badge bg-secondary">
                                    <% if (chat.createdAt) { %>
                                        <%= chat.createdAt.toString().split(" ")[4] %> 
                                        <%= chat.createdAt.toString().split(" ").slice(0,4).join("-") %>
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </span>
                            </small>

                        </div>
                        <form method="GET" action="/chats/<%=chat._id%>/edit" class="d-inline">
                            <button type="submit" class="btn btn-outline-success btn-sm">
                                Edit
                            </button>
                        </form>
                        <br>
                        <form method="POST" action="/chats/<%=chat._id%>?_method=DELETE">
                            <button type="submit" class="btn btn-danger btn-sm mt-2 mb-3">Delete</button>
                        </form>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    </body>
</html>